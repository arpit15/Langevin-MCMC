<scene version="0.6.0">



	<default name="spp" value="1024" />
	<default name="resx" value="324" />
	<default name="resy" value="243" />

	<default name="PDMSIOR" value="1.421" />
	<default name="EPOXYIOR" value="1.49" />

	<default name="mixingcoeff" value="0.85" />

	<dpt>
        <string  name="integrator"     value="mcmc"/>
        <integer name="mindepth"       value="-1"/>
        <integer name="maxdepth"       value="32"/>
        <boolean name="bidirectional"  value="true"/>
        <integer name="spp"            value="$spp"/>    
        <float   name="largestepprob"  value="0.05"/>
        <float   name="largestepscale" value="4"/>
        <boolean name="mala"           value="true"/>
        <boolean name="uselightcoordinatesampling"           value="true"/>
        <integer name="directspp" value="$spp"/>
    </dpt>


	<integrator type="pssmlt">
		<boolean name="bidirectional" value="true"/>
		<!-- <string name="technique" value="path"/> -->
		<boolean name="twoStage" value="true"/>
		<integer name="maxDepth" value="-1" />
	</integrator>

	<sensor id="Camera" type="perspective">
		<string name="fovAxis" value="x" />
		<float name="fov" value="102" />
		<float name="nearClip" value="0.0001" />
		<float name="farClip" value="100" />
		<transform name="toWorld">
			<matrix value="-1.000000 0.000000 0.000000 0.000000 0.000000 1.000000 0.000000 0.02 -0.000000 0.000000 -1.000000 0.000000 0.000000 0.000000 0.000000 1.000000" />
		</transform>
		<sampler type="independent">
			<integer name="sampleCount" value="$spp" />
		</sampler>
		<film type="hdrfilm">
			<integer name="width" value="$resx" />
			<integer name="height" value="$resy" />
			<boolean name="banner" value="false" />
		</film>
	</sensor>


	<include filename="ies_area.xml"/>

