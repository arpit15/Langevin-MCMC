		<string name="filename" value="meshes/texturedcylinder.ply" />
		<bsdf type="twosided">
		<bsdf type="diffuse">
			<texture name="reflectance" type="bitmap">
				<string name="filename" value="textures/exact_cylinder_crop2.png"/>
			</texture>
		</bsdf>
	</bsdf>
	</shape>


